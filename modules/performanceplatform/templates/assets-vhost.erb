# Spotlight serves assets from the public directory
# of the currently deployed version of the app.
location /spotlight/ {
  expires 1m;
  rewrite ^/spotlight(.*)$ $1 break;
  root /opt/spotlight/current/public;
  gzip on;
  gzip_types application/x-javascript application/javascript application/json text/css;
  gzip_proxied no_etag;
  gzip_vary on;
  }

location /stagecraft/ {
  expires 1h;
  rewrite ^/stagecraft(.*)$ $1 break;
  root /opt/stagecraft/current/assets;
  gzip on;
  gzip_types application/x-javascript application/javascript application/json text/css;
  gzip_proxied no_etag;
  gzip_vary on;
}
